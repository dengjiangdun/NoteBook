<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_view_height"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary">
    <ImageView
        android:layout_width="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:src="@drawable/back_arrow"
        android:id="@+id/iv_back"
        android:visibility="visible"
        android:layout_gravity="left|center_vertical"/>
    <TextView
        android:layout_toRightOf="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:id="@+id/tv_title_note_book"
        android:textColor="@color/text_balck"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_20"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/iv_delete_all_notes"
            android:src="@drawable/delete_all_note"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_toLeftOf="@+id/iv_delete_all_notes"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:id="@+id/iv_notes_mode"
        android:src="@drawable/login"/>



</RelativeLayout>