                />

            <ImageButton
                android:id="@+id/action_heading6"
                android:layout_width="@dimen/edit_icon_width"
                android:layout_height="@dimen/edit_icon_width"
                android:layout_marginLeft="@dimen/icon_gap"
                android:layout_marginRight="@dimen/icon_gap"
                android:scaleType="centerInside"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/h6"
                />

            <ImageButton
                android:id="@+id/action_txt_color"
                android:layout_width="@dimen/edit_icon_width"
                android:layout_height="@dimen/edit_icon_width"
                android:layout_marginLeft="@dimen/icon_gap"
                android:layout_marginRight="@dimen/icon_gap"
                android:scaleType="centerInside"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/txt_color"
                />

            <ImageButton
                android:id="@+id/action_bg_color"
                android:layout_width="@dimen/edit_icon_width"
                android:layout_height="@dimen/edit_icon_width"
                android:layout_marginLeft="@dimen/icon_gap"
                android:layout_marginRight="@dimen/icon_gap"
                android:scaleType="centerInside"
                android:background="@null"
