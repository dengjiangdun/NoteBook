            <ImageButton
                android:id="@+id/action_insert_checkbox"
                android:layout_width="@dimen/edit_icon_width"
                android:layout_marginLeft="@dimen/icon_gap"
                android:layout_marginRight="@dimen/icon_gap"
                android:layout_height="@dimen/edit_icon_width"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@android:drawable/checkbox_on_background"
                android:scaleType="centerInside" />

        </LinearLayout>
    </HorizontalScrollView>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/ll_note_layout"
         android:orientation="horizontal"
         android:layout_marginLeft="@dimen/padding_left_width">
         <ImageView
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:layout_gravity="center"
             android:src="@drawable/note_type_label"
             android:scaleType="centerInside"
             android:layout_marginRight="@dimen/padding_left_width"
             android:id="@+id/iv_note_type"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:gravity="center|left"
             android:textSize="12sp"
             android:layout_gravity="center"
             android:id="@+id/tv_choose_note_label"
             android:hint="Note Type"/>
     </LinearLayout>
            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/contentbackground"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="center|right">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_left_width"
                    android:src="@drawable/note_clock_heigh"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginRight="@dimen/padding_left_width"
                    android:id="@+id/tv_note_update_date"/>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/padding_left_width"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_icon_width"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:text="HTML Preview"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_icon_width"
                android:layout_marginTop="15dp"
                />

</LinearLayout>
</ScrollView>